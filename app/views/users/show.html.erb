<h1><%= current_user.username %> Profile</h1>


<%= link_to "CHIRP!!!", new_chirp_path, :class => "btn btn-info" %>

<ul>
    <% current_user.chirps.each do |chirp| %>
      <li><%= link_to chirp.message, chirp_path(chirp) %></li>
    <%end%>
</ul>

<nav class="navbar navbar-fixed-bottom" roll="navigation">
  <span class="pull-right">
    <%= link_to "Edit Profile", edit_user_path(@user) %> |
    <%= link_to "Delete User", user_path(@user), method: "delete" %>
  </span>
</nav>
